<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenHelper.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Kitchen Helper"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="An app for finding inspiring recipes with the ingredients you have today!"
                Style="{StaticResource SubHeadline}" />

            <Label
                Text="Use the navigation tab across the top to explore the different features"
                Style="{StaticResource SubHeadline}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
